<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/menu_slide_in_anim</item>
        <item name="android:windowExitAnimation">@anim/menu_slide_out_anim</item>
    </style>
    <style name="SelectedMenuStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">?customTitleColor</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableBottom">?colorPrimary</item>
        <!-- Add other styling attributes as needed -->
    </style>

    <style name="UnselectedMenuStyle">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">?customTitleColor</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!-- Remove bold and underline attributes for unselected state -->
        <!-- Add other styling attributes as needed -->
    </style>
    <style name="NavigationViewStyle">
        <item name="android:textColorPrimary">?customTitleColor</item>
    </style>

    <style name="OutlinedBoxCustomStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">?customTitleColor</item>
        <item name="endIconTint">@drawable/selector_dropdown_icon</item>
        <item name="hintTextColor">?customTitleColor</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">?customTitleColor</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButtonStyle</item>
    </style>

    <style name="CustomButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?customTitleColor</item>
    </style>
</resources>