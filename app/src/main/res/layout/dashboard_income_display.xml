<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/income_display_data"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/display_ripple_click"
    android:layout_height="match_parent">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintHorizontal_bias="0.977"
        android:alpha="0.4"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/incoming_money_icon"/>
    <TextView
        android:id="@+id/total_income_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="10sp"
        android:textColor="?customTitleColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Income"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/total_income_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.1"
        android:id="@+id/total_income_display"
        android:textStyle="bold"
        android:textColor="?customTitleColor"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+Php 0.00"/>
</androidx.constraintlayout.widget.ConstraintLayout>