<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125sp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp"
        android:background="@drawable/transaction_item_holder_bg">

        <RelativeLayout
            android:id="@+id/expense_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/expense_fields"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0399"
            android:padding="5sp"
            >
            <TextView
                android:id="@+id/expense_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/expense_symbol"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expense_fields"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="5sp"
            app:layout_constraintStart_toEndOf="@id/expense_icon"
            app:layout_constraintEnd_toStartOf="@id/expense_date_and_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:id="@+id/expense_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/expense_details"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:text="placeholder"
                android:textStyle="bold"
                android:textColor="?customTitleColor"
                android:textSize="15sp"
                android:layout_marginBottom="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/expense_wallet"
                android:text="placeholder"
                android:textColor="?customTitleColor"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/expense_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/expense_details"
                android:text="placeholder"
                android:textColor="?customTitleColor"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/expense_wallet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="2sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expense_date_and_type"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/expense_fields"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/expense_transaction_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:textColor="?customTitleColor"
                android:text="placeholder"
                android:textSize="9sp"
                android:textAlignment="textEnd"
                android:layout_marginBottom="2.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/expense_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:text="placeholder"
                android:textAlignment="center"
                android:textColor="?expense_color"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expense_transaction_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>