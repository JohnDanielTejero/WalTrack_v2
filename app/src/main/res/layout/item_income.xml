<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125sp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5sp"
        android:background="@drawable/display_ripple_click">
        <RelativeLayout
            android:id="@+id/income_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/income_fields"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0399"
            android:padding="5sp"
            >
            <TextView
                android:id="@+id/income_id"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placeholder"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/income_symbol"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/income_fields"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="5sp"
            app:layout_constraintStart_toEndOf="@id/income_icon"
            app:layout_constraintEnd_toStartOf="@id/income_date_and_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:layout_marginTop="10sp"
                android:id="@+id/income_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/income_details"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:text="Placeholder"
                android:textStyle="bold"
                android:textColor="?customTitleColor"
                android:textSize="15sp"
                android:layout_marginBottom="2sp"
                android:layout_width="80sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Placeholder"
                android:id="@+id/income_details"
                android:textColor="?customTitleColor"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/income_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="2sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/income_date_and_type"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/income_fields"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/income_transaction_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintHorizontal_bias="0.95"
                android:textColor="?customTitleColor"
                android:text="11/29/03"
                android:textSize="9sp"
                android:textAlignment="textEnd"
                android:layout_marginBottom="2.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/income_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:text="+Php 3000.00"
                android:textAlignment="center"
                android:textColor="#41F100"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/income_transaction_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>