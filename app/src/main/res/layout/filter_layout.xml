<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.button.MaterialButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/display_ripple_click_alt"
        android:text="Filter"
        android:textAllCaps="true"
        android:textColor="?colorOnPrimary"
        android:layout_marginVertical="10sp"
        app:icon="@drawable/ic_filter_show" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/filter_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/filter_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            app:layout_constraintVertical_bias="0"
            android:layout_marginBottom="5sp"
            android:id="@+id/filter_wallet_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Wallet"
                style="@style/OutlinedBoxCustomStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/filter_wallet_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="All"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/filter_wallet_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Year"
                android:id="@+id/filter_year_dropdown_container"
                style="@style/OutlinedBoxCustomStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="2.5sp"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:textSize="9.6sp"
                    android:text="All"
                    android:id="@+id/filter_year_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Month"
                android:id="@+id/filter_month_dropdown_container"
                android:enabled="false"
                android:layout_weight="1"
                style="@style/OutlinedBoxCustomStyle"
                android:layout_width="0dp"
                android:layout_marginHorizontal="2.5sp"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:textSize="9.6sp"
                    android:text="All"
                    android:id="@+id/filter_month_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Day"
                android:id="@+id/filter_day_dropdown_container"
                android:enabled="false"
                android:layout_marginStart="2.5sp"
                style="@style/OutlinedBoxCustomStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:textSize="9.6sp"
                    android:text="All"
                    android:id="@+id/filter_day_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"

                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>