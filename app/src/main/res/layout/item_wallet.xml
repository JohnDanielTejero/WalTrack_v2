<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5sp"
    android:layout_height="125sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/display_ripple_click">
        <RelativeLayout
            android:id="@+id/wallet_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/wallet_fields"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.0399"
            android:padding="5sp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tint="?customTitleColor"
                android:src="@drawable/wallet_icon_alt"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wallet_fields"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="5sp"
            app:layout_constraintStart_toEndOf="@id/wallet_icon"
            app:layout_constraintEnd_toStartOf="@id/wallet_date_and_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:id="@+id/wallet_title"
                android:layout_marginTop="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/wallet_details"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:text="Placeholder"
                android:textStyle="bold"
                android:textColor="?customTitleColor"
                android:textSize="15sp"
                android:layout_marginBottom="2sp"
                android:layout_width="80sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/wallet_details"
                android:text="Placeholder"
                android:textColor="?customTitleColor"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/wallet_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="2sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wallet_date_and_type"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/wallet_fields"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/wallet_transaction_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintHorizontal_bias="0.75"
                android:textColor="?customTitleColor"
                android:text="Placeholder"
                android:textSize="10sp"
                android:textAlignment="textEnd"
                android:layout_marginBottom="2.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>